{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean All Builds",
            "type": "shell", 
            "command": "rm",
            "args": ["-rf", "build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Configure Debug (Game)",
            "type": "shell",
            "command": "cmake",
            "args": ["--preset", "debug"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always", 
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Debug (Game)",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "Build/debug", "-j8"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false, 
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": "Configure Debug (Game)"
        },
