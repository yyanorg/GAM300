{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Game",
            "type": "cppdbg",
            "request": "launch", 
            "args": [],
            "stopAtEntry": false,
            "environment": [],
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Debug (Game)",
            "linux": {
                "program": "${workspaceFolder}/Project/Build/debug/bin/Game",
                "cwd": "${workspaceFolder}/Project/Build/debug/bin",
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "windows": {
                "program": "${workspaceFolder}/Project/Build/debug/bin/Debug/Game.exe",
                "cwd": "${workspaceFolder}/Project/Build/debug/bin/Debug",
                "MIMode": "lldb"
            }
        },
        {
